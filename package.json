{
  "name": "start_backend_node_ts_express",
  "version": "1.0.0",
  "main": "build/app.js",
  "scripts": {
    "start": "node ./build/app.js",
    "start:dev": "yarn build && node ./build/app.js",
    "dev": "tsnd --respawn -r tsconfig-paths/register ./src/app.ts",
    "build": "npm run compile && npm run post:compile && npm run copyAssets",
    "copyAssets": "copyfiles -e ./src/**/*.ts -e ./src/**/*sample* -e ./src/**/*.json -u 1 ./src/**/* ./build/",
    "compile": "tsc",
    "post:compile": "ef-tspm",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prettier:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "mongoose": "^6.3.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "onchange": "^7.1.0",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.4"
  },
  "license": "MIT"
}
